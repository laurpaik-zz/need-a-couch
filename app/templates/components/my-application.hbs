<h1>Need A Couch?</h1>
{{#unless isAuthenticated}}
<p>Please create an account and sign in if you want to surf couches!</p>
{{/unless}}

{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}

<div class="col-md-8 col-md-offset-2">
  {{#if isAuthenticated}}
    {{#link-to "couchposts"}}Couchposts{{/link-to}}
  {{/if}}
  {{outlet}}
</div>
